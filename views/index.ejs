
<div class="header">
    <h2>Diary Dashboard</h2>
    <p>Welcome back, <span id="username"><%= username %></span>!</p>
</div>

<!-- Today Section -->
<div class="today-section">
    <div class="today-info">
        <div class="date-text" id="today-date">Today is <%= currentDate %></div>
    </div>
    <a href="/newentry" class="add-entry-btn">Add Entry</a>
</div>

<div class="content-grid">
    <!-- Recent Entries -->
    <div class="recent-entries">
        <h3>Your recent entries</h3>
        <div class="entries-container">
            <% if (entries && entries.length > 0) { %>  <!-- Check if there are entries -->
                <% entries.forEach(entry => { %>
                    <a href="/fullentry/<%= entry.id %>" style="text-decoration: none; color: inherit;">
                        <div class="entry">
                            <div class="entry-content">
                                <h2 class="entry-title"><%= entry.title %></h2>
                                <p><%= new Date(entry.date).toLocaleDateString() %></em></p>
                                <p><%= entry.content %></p>
                            </div>
                        </div>
                    </a>
                <% }) %>
            <% } else { %>
                <div class="image-container no-entry"></div>
                <p>Looks like there are no entries here!</p>
            <% } %>
        </div>
    </div>

    <!-- Calendar Widget -->
    <div class="image">
        
    </div>
</div>