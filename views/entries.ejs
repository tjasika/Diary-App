<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>My Entries</title>
        <link rel="stylesheet" href="/css/style2.css">
    </head>
    <body>
        <div class="container">
        <!-- Sidebar -->
            <div class="sidebar">
                <div class="upper">
                    <h1>My Diary</h1>
                    <nav>
                        <a href="/" class="nav-item">Dashboard</a>
                        <a href="/entries" class="nav-item">Entries</a>
                        <a href="/account" class="nav-item">Account</a>
                        <a href="/settings" class="nav-item">Settings</a>
                    </nav>
                </div>
                <div class="lower">
                    <nav>
                        <a href="/logout" id="logout-btn" class="nav-item">Log Out</a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="main-content">
                <div class="entries-container">
                    <% if (entries && entries.length > 0) { %>  <!-- Check if there are entries -->
                    <% entries.forEach(entry => { %>
                    <div class="post">
                        <h2 class="post-title"><%= entry.title %></h2>
                        <p><%= entry.content %></p>
                        <p><em>By <%= entry.username %> on <%= new Date(entry.date).toLocaleString() %></em></p>
                    </div>
                    <% }) %>
                <% } else { %>
                    <p>No entries available.</p>
                <% } %>
                </div>
            </div>
        </div>
    </body>
</html>